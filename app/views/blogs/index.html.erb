<h1>Blogs</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<p class="btn btn-md btn-secondary"><%= link_to 'Write a New Blog', new_blog_path %></p>
		</tr>
	</thead>

	<tbody>
		<% @blogs.each do |blog| %>
			<tr>
				<td><%= blog.title %></td>
				<td><%= blog.body %></td>
				<td><%= link_to 'Show', blog %></td>
				<td><%= link_to 'Edit', edit_blog_path(blog) %></td>
				<td><%= link_to 'Delete Post', blog, method: :delete, data: { confirm: 'Are you sure?'} %></td>
				</tr>
		<% end %>
	</tbody>
</table>