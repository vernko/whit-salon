<h1>Services</h1>

<% @services.each do |service| %>
  <p><%= link_to service.title, service_show_path(service) %></p>
  <p><%= service.body %></p>
  <%= image_tag service.thumb_image if !service.thumb_image.nil? %>
  <%= link_to 'Show', service_show_path(service) %>
	<%= link_to 'Edit', edit_service_path(service) %>
	<%= link_to 'Delete Service', service, method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>

<p><%= link_to 'Add a New Service', new_service_path %></p>